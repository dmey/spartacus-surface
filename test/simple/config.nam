&radsurf_driver
do_parallel = true,
!nrepeat = 1000,
cos_solar_zenith_angle=0.5,
vegetation_fsd = 0.5,
!vegetation_extinction = 0.25,
do_conservation_check = true,
iverbose = 2,
/

&radsurf
iverbose = 3,
do_sw = true,
do_lw = true,
use_sw_direct_albedo = false,
do_vegetation = true,
do_urban = true,
n_vegetation_region_forest = 2,
n_vegetation_region_urban = 2,
nsw = 1,
nlw = 1,
n_stream_sw_forest = 2,
n_stream_sw_urban = 2,
n_stream_lw_forest = 2,
n_stream_lw_urban = 2,
do_save_flux_profile = true,
/
